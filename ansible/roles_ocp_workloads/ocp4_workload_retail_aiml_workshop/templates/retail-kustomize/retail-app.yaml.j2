apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: retail-dev
  namespace: openshift-gitops
spec:
  destination:
    namespace: retail-rhods-project
    server: https://kubernetes.default.svc
  project: default
  source:
    path: overlays/development
    repoURL: {{ _ocp4_workload_big_demo_gitea_repo_route_url }}/{{ ocp4_workload_gitea_aiml_user }}/retail-dev-gitops.git
    targetRevision: HEAD
  syncPolicy:
    automated:
      prune: true
